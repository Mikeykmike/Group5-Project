<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigationController"
    app:startDestination="@id/loginScreen">

    <fragment
        android:id="@+id/gameBrowser"
        android:name="edu.fullerton.mobiledev.group5.gamefinder.GameBrowser"
        android:label="GameBrowser" >
        <action
            android:id="@+id/action_gameBrowser_to_gameDetail"
            app:destination="@id/gameDetail" />
    </fragment>
    <fragment
        android:id="@+id/gameDetail"
        android:name="edu.fullerton.mobiledev.group5.gamefinder.GameDetail"
        android:label="fragment_game_detail"
        tools:layout="@layout/fragment_game_detail" >
        <action
            android:id="@+id/action_gameDetail_to_gameBrowser"
            app:destination="@id/gameBrowser" />
    </fragment>
    <fragment
        android:id="@+id/loginScreen"
        android:name="edu.fullerton.mobiledev.group5.gamefinder.LoginScreen"
        android:label="fragment_login_screen"
        tools:layout="@layout/fragment_login_screen" >
        <action
            android:id="@+id/action_loginScreen2_to_gameBrowser"
            app:destination="@id/gameBrowser" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="edu.fullerton.mobiledev.group5.gamefinder.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>